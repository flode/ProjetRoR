<% provide(:title, @publication.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= render "pub_name", pub: @publication %>
      </h1>
<%= @publication.type %><br/>
<%= @publication.description %>

<h3>Notes</h3>
<%= @publication.notes %>
    </section>
  </aside>
</div>

<% if @correct_user_publication %>
  <%= link_to "Edit", edit_publication_path %>
<% end %>
<h3>Authors</h3>
<ul class="authors">
  <% @publication.authors.each do |author| %>
    <li>
      <%= link_to render("shared/author_name", author: author), author %>
    </li>
  <% end %>
</ul>

