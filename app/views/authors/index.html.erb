<% provide(:title, 'All authors') %>
<h1>All authors</h1>

<% if current_user != nil %>
  <%= link_to "Add new author", new_author_path %>
<% end %>
<%= will_paginate %>

<ul class="authors">
  <% @authors.each do |author| %>
    <li>
      <%= link_to render("shared/author_name", author: author), author %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
