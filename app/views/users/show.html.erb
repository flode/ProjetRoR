<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 4 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<ul class="authors">
  <% @user.author.each do |author| %>
    <li>
      <%= link_to author.surname, author %>
    </li>
  <% end %>
</ul>

