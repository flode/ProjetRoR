<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 4 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<% if current_user != nil && @user.id == current_user.id %>
  <%= link_to "Add Author", new_author_path %><br/>
<% end %>
<h3>Responsible for</h3>
<ul class="authors">
  <% @user.author.each do |author| %>
    <li>
      <%= link_to author.surname, author %>
    </li>
  <% end %>
</ul>

